<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:padding="20dp"
    android:background="#fffafdff"
  >

    <EditText android:id="@+id/edit_message"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_message"

        android:layout_marginTop="10dp"
        />


    <Button
        android:id="@+id/button_server"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Help Others to Execute"
        android:onClick="startService"
        android:layout_marginTop="10dp"
        android:background="#ff90c1ff"

        />

    <Button
        android:id="@+id/button_client"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Transmit project to others"
        android:onClick="startTransmit"
        android:layout_marginTop="10dp"
        android:background="#ff90c1ff"
        />

    <Button
        android:id="@+id/showSP"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="show the service Provider list"
        android:layout_marginTop="10dp"
        android:background="#ff90c1ff"

        />

    <TextView
        android:id="@+id/spTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cpTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/result_Text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />





    </LinearLayout>